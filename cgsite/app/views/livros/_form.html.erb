<%= form_with(model: livro, local: true) do |form| %>
  <% if livro.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(livro.errors.count, "error") %> prohibited this livro from being saved:</h2>

      <ul>
      <% livro.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class ="row">
    <form class="col s12">
      <div class="input-field col s6">
        <input placeholder="Insira o nome aqui" id="nome_autor" type="text" class="validate">
        <label for="nome_autor" class="active">Primeiro nome</label>
      </div>
      <div class="input-field col s6">
        <input placeholder="Insira o sobrenome aqui" id="sobrenome_autor" type="text" class="validate">
        <label for="sobrenome_autor" class="active">Sobrenome</label>
      </div>
    </form>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Registro do livro" id="registro" type="text" class="validate">
      <label for="nome_autor" class="active">Registro</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Titulo do livro" id="livro_titulo" type="text" class="validate">
      <label for="nome_autor" class="active">Titulo</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="cdu" id="cdu" type="text" class="validate">
      <label for="nome_autor" class="active">CDU</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Idioma do Livro" id="idioma_livro" type="text" class="validate">
      <label for="idioma_livro" class="active">Idioma</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Nome da coleção ou da serie de livros" id="nome_serie" type="text" class="validate">
      <label for="nome_serie" class="active">Serie ou Coleção</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Volume da serie ou da coleção" id="volume_serie" type="number" class="validate">
      <label for="volume_serie" class="active">Volume</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Editora Livro" id="editora" type="text" class="validate">
      <label for="editora" class="active">Editora</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Ano de publicação" id="ano" type="date" class="validate">
      <label for="ano" class="active">Ano</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Edição do Livro" id="edicao" type="number" class="validate">
      <label for="edicao" class="active">Edição</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="ISBN do Livro" id="isbn" type="text" class="validate">
      <label for="isbn" class="active">ISBN</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Data de aquisição do Livro" id="data_aquisicao" type="date" class="validate">
      <label for="data_aquisicao" class="active">Data</label>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Origem de aquisição do livro" id="origem_aquisicao" type="text" class="validate">
      <label for="origem_aquisicao" class="active">Origem</label>
    </div>
  </div>
  <div class = "row">
    <div class="input-field col s12">
      <div class="select-wrapper">
      <span class="caret">▼</span>
      <input type="text" class="select-dropdown" readonly="true" data-activates="select-options-1f76e5e1-d2c2-45ba-62a1-0f70953f6888" value="Choose your option">
      <ul id="select-options-1f76e5e1-d2c2-45ba-62a1-0f70953f6888" class="dropdown-content select-dropdown" style="width: 199px; position: absolute; top: 0px; left: 0px; opacity: 1; display: none;">
      <li class="disabled">
      <span>Classificação etária</span></li><li class="">
      <span>Option 1</span></li><li class="">
      <span>Option 2</span></li><li class="">
      <span>Option 3</span></li></ul>
      <select class="initialized">
      <option value="" disabled="" selected="">Classificação etária do livro</option>
      <option value="1">Classificação livre (Menor de 18 anos)</option>
      <option value="2">Maior de 18 anos</option>
      </select>
      </div>
    </div>
  </div>
  <div class ="row">
    <div class=" input-field col s12">
     <form action="#">
    <p> O livro é renovável?
    <br>
      <input type="checkbox" id="renovavel" />
      <label for="test5">Sim</label>
    </p>
    </div>
  </div>
   <div class ="row">
    <div class=" input-field col s12">
      <input placeholder="Link de download do livro" id="link_download" type="text" class="validate">
      <label for="link_download" class="active">Download</label>
    </div>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
